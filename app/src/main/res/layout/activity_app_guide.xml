<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AppGuide">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="146dp"
        android:text="App Guide"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/help_1"
        android:layout_width="331dp"
        android:layout_height="61dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="User Can Use CNN model for  Activity Recognition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading" />

    <TextView
        android:id="@+id/help_2"
        android:layout_width="331dp"
        android:layout_height="61dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="User Can Use PoseNet Model For Activity Recogntion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help_1" />

    <TextView
        android:id="@+id/help_3"
        android:layout_width="331dp"
        android:layout_height="61dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="User Can Use PoseNet Model For Activity Recogntion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help_2" />

    <TextView
        android:id="@+id/help_4"
        android:layout_width="331dp"
        android:layout_height="61dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="User Can Use Eye Detection For Drowziness Detection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help_3" />

    <TextView
        android:id="@+id/help_5"
        android:layout_width="331dp"
        android:layout_height="61dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="User Can Collect Data to improve Future prediction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help_4" />


</androidx.constraintlayout.widget.ConstraintLayout>